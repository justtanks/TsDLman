<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ts.databending.activity.GetPhotoActivity">

    <Button
        android:id="@+id/getbycamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="37dp"
        android:text="相机获取"
        app:layout_constraintLeft_toRightOf="@+id/getbybook"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/getbybook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="37dp"
        android:text="相机获取图片"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="184dp"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toBottomOf="@+id/getbybook"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        />
</android.support.constraint.ConstraintLayout>
