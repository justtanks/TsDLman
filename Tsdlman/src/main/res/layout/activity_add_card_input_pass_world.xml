<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    tools:context=".tsActivity.AddCardInputPassWorldActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/zhucecolortitle"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/inputpass_back"
            android:layout_width="90dp"
            android:layout_height="match_parent"></RelativeLayout>
        <ImageView
            android:id="@+id/step2_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/addcard_fanhui"
            android:layout_marginStart="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/step2_back"
            android:textColor="@color/yello_701585"
            android:layout_marginStart="7dp"
            android:textSize="14sp"
            android:text="@string/add_card"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/gray3"
        android:text="@string/yanzhengshenf"
        />
    <com.daili.tsapp.jsView.PwdEditText
        android:id="@+id/input_passpet_pwd"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:focusable="true"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:maxLength="6"
        android:enabled="true"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
      />
</LinearLayout>
