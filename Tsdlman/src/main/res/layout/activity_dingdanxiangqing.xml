<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/qiangdan_toptabtex_notselect"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dingdanxiangqing"
            android:textColor="@color/titiletextcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/dingdanxiangqing_back"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="match_parent"></RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/fanhui" />
        </RelativeLayout>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/xiangqing_dinkey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="@string/dingdanhao"
                    android:textColor="@color/textcolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/xiangqing_dingdanhaovalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:layout_toRightOf="@id/xiangqing_dinkey"
                    android:textColor="@color/textcolor"
                    android:textSize="13sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:text="@string/yijiedan"
                    android:textColor="@color/item_hadformtx2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_form_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <TextView
                    android:id="@+id/xiangqing_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/xiangqing_head"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/xiangqing_head"

                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/xiangqing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/xiangqing_head"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/xiangqing_head"
                    android:textColor="@color/gray" />

                <RelativeLayout
                    android:id="@+id/xiangqing_call"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/phone" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/xiangqing_head"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/head_img" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_form_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/xiangqing_shangbiao"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/xiangqign_shangbia0" />

                <TextView
                    android:id="@+id/xiangqing_shangbiaokey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/xiangqing_shangbiao"
                    android:layout_marginStart="15dp"
                    android:layout_toRightOf="@id/xiangqing_shangbiao"
                    android:text="@string/shangbiaoname"
                    android:textColor="@color/textcolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/xiangqing_namevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/xiangqing_shangbiao"
                    android:layout_marginStart="8dp"
                    android:layout_toRightOf="@id/xiangqing_shangbiaokey"
                    android:textColor="@color/textcolor"
                    android:textSize="13sp"

                    />

                <TextView
                    android:id="@+id/xiangqing_zizhikey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xiangqing_shangbiaokey"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/xiangqing_shangbiao"
                    android:text="@string/shenqingzizhi"
                    android:textColor="@color/gray1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/xiangqing_zizhivalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xiangqing_shangbiaokey"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/xiangqing_shangbiaokey"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xiangqing_zizhikey"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/xiangqing_shangbiao"
                    android:text="@string/allmoney"
                    android:textColor="@color/gray1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/xiangqing_feiyongvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xiangqing_zizhikey"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/xiangqing_shangbiaokey"
                    android:textColor="@color/gray1"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/xiangqing_addjindu"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/selector_tixianbutton"
                    android:text="添加进度"
                    android:textColor="@color/item_hadformtx2"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/xiangqing_fuwu_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"

                        android:text="@string/service"
                        android:textColor="@color/textcolor"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/xiangqing_fuwuvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/xiangqing_fuwu_key"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@id/xiangqing_fuwu_key"
                        android:textColor="@color/textcolor"
                        android:textSize="13sp"

                        />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/item_form_line" />

                <ImageView
                    android:id="@+id/xiangqing_zhizhaopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/xiangqing_zhizhao"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:text="身份证照:"
                        android:textColor="@color/gray3"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/xiangqing_bt_shenfen"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="@mipmap/fuzhji2" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/xiangqing_shenfenimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/pdf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:text="营业执照:"
                        android:textColor="@color/gray3"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/xiangqing_bt_zhizhao"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="@mipmap/fuzhji2" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/xiangqing_zhizhaoimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/pdf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:text="合同:"
                        android:textColor="@color/gray3"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/xiangqing_bt_hetong"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="@mipmap/fuzhji2" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/xiangqing_hetongimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/pdf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="委托书:"
                        android:textColor="@color/gray3"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/xiangqing_bt_weituo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="@mipmap/fuzhji2" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/xiangqing_weituoimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/pdf" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>