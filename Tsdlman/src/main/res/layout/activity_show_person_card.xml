<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tsActivity.ShowPersonCardActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiter_title"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@color/qiangdan_toptabtex_notselect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/waiterinfo_back"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="44dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/waiter_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/waiter_title"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@mipmap/fanhui" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的名片"
        android:textColor="@color/main_tixianbutton"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/waiter_title"
        app:layout_constraintLeft_toLeftOf="@+id/waiterinfo_back"
        app:layout_constraintRight_toRightOf="@+id/waiter_title"
        app:layout_constraintTop_toTopOf="@+id/waiter_title" />

    <Button
        android:id="@+id/waiter_share"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="0dp"
        android:text="分享"
        android:textColor="@color/main_tixianbutton"
        app:layout_constraintBottom_toBottomOf="@+id/waiter_title"
        app:layout_constraintRight_toRightOf="@+id/waiter_title"
        app:layout_constraintTop_toTopOf="@+id/waiter_title" />

    <LinearLayout
        android:id="@+id/waiterinfo_webparent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waiter_title"
        app:layout_constraintVertical_bias="0.0">

        <ProgressBar
            android:id="@+id/waiter_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
