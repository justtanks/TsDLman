<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="PhoneTestBinding">

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_phone_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgray"
        android:orientation="vertical"
        tools:context="com.ts.partner.partnerActivity.PhoneTestActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/zhucecolortitle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phonetest_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/addcard_fanhui"

                />

            <TextView
                android:id="@+id/phoneback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:layout_toRightOf="@id/phonetest_back"
                android:gravity="center_vertical"
                android:text="@string/yanzhengshouji"
                android:textColor="@color/yello_701585"
                android:textSize="14sp" />

            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/write"

            >

            <TextView
                android:id="@+id/phonetest_caozuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="此次操作需要短信，请输入"
                android:textColor="@color/gray1"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/phonetext_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/phonetest_caozuo"
                android:layout_below="@id/phonetest_caozuo"
                android:layout_marginTop="7dp"
                android:text=""
                android:textColor="@color/gray1"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@color/write">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="@string/jiaoyanma"
                android:textColor="@color/gray1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/phonetest_obtainmsg"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@mipmap/yanzhengma"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/phonetest_obtainmsg"
                android:src="@mipmap/done_line" />


            <EditText
                android:id="@+id/phonetest_yanzhengma"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="输入短信验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/gray1"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/phonetest_notmsg"
                android:textColor="@color/done_yellow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/phonetext_nextstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/addcard_next_moren"
                android:enabled="false" />
        </RelativeLayout>
    </LinearLayout>
</layout>