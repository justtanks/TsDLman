<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ts.partner.partnerActivity.GetPassActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/qiangdan_toptabtex_notselect"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/titiletextcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/getpass_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/fanhui" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/getpass_relative1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@mipmap/login_beforeedit"
        >
        <ImageView
            android:id="@+id/login_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_phone"
            />
        <EditText
            android:id="@+id/getpass_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_toRightOf="@id/login_view_phone"
            android:layout_marginStart="13dp"
            android:textSize="12dp"
            android:inputType="number"
            android:background="@null"
            android:textColorHint="@color/registhintcolor"
            android:hint="请输入手机号"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/getpass_relative2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/login_beforeedit">

        <ImageView
            android:id="@+id/login_view_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:src="@mipmap/login_pass" />

        <EditText
            android:id="@+id/getpass_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="13dp"
            android:layout_toRightOf="@id/login_view_pass"
            android:background="@null"
            android:hint="请输入修改的密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="@color/registhintcolor"
            android:textSize="12dp"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        >
        <RelativeLayout
            android:id="@+id/getpass_relative23"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@mipmap/login_beforeedit"
            >
            <ImageView
                android:id="@+id/login_view_pass1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/regist_letter"
                />
            <EditText
                android:id="@+id/getpass_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:layout_toRightOf="@id/login_view_pass1"
                android:layout_marginStart="13dp"
                android:textSize="12dp"
                android:background="@null"
                android:textColorHint="@color/registhintcolor"
                android:hint="请输入验证码"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            >
            <ImageView
                android:id="@+id/getpass_textback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/regist_text"
                />
            <TextView
                android:id="@+id/getpass_bttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/huoquyanzhengma"
                android:textColor="@color/gray1"
                />

        </RelativeLayout>
        </LinearLayout>
    <Button
        android:id="@+id/getpass_tijiao"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/selector_tixianbutton"
        android:text="提交修改"
        android:textColor="@color/titiletextcolor"
        />
</LinearLayout>
</layout>