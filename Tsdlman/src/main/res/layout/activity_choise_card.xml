<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data class="ChoiseCardBinding">

    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choise_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgray"
    tools:context="com.ts.partner.partnerActivity.ChoiseCardActivity">
    <RelativeLayout
        android:id="@+id/choisecard_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/zhucecolortitle"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/choisecard_reback"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            ></RelativeLayout>
        <ImageView
            android:id="@+id/choisecard_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/addcard_fanhui"
            android:layout_marginStart="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/choisecard_back"
            android:textColor="@color/yello_701585"
            android:layout_marginStart="7dp"
            android:textSize="14sp"
            android:text="@string/choise_bankcard"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="@string/mybank_card"
        android:textSize="13sp"
        android:textColor="@color/gray2"
        android:layout_marginStart="15dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/choisecar_line"
        />

    <RelativeLayout
        android:id="@+id/choisecard_newcard"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@drawable/selector_mainbutton"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
             android:textSize="15sp"
            android:textColor="@color/gray1"
            android:text="@string/use_newcard"
            />
        <ImageView
            android:id="@+id/choisecard_duihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/choisecard_duihao"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/choisecar_line"
        />
    <ListView
        android:id="@+id/choisecard_lb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
</LinearLayout>
</layout>