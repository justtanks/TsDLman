<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settingback"
    tools:context="com.daili.tsapp.tsActivity.PersonalMsgActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/qiangdan_toptabtex_notselect"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/persion_textback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/titiletextcolor"
           android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/person_back"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="@string/personal_title"
            />
        <ImageView
            android:id="@+id/person_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/fanhui"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/headimg"
            />
        <ImageView
            android:id="@+id/persionan_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/person_head_back"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/person_name"
            />
        <TextView
            android:id="@+id/persion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/personal_phonenm"
            />
        <TextView
            android:id="@+id/persion_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"

            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/person_youxiang"
            />
        <TextView
            android:id="@+id/persion_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
         android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/persong_sex"
            />
        <TextView
            android:id="@+id/persion_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/person_zhuzhi"
            />
        <TextView
            android:id="@+id/persion_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@mipmap/setting_linearback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/personm_sign"
            />
        <TextView
            android:id="@+id/persion_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_form_line"
        />
    <RelativeLayout
        android:id="@+id/persion_shanchang"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/selector_mainbutton"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settingtext"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/shanchanglingyu"
            />
        <ImageView
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/msg_dowm"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
  <com.daili.tsapp.jsView.ItemContainer
     android:id="@+id/persion_container"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
      android:background="@color/white"
      >
  </com.daili.tsapp.jsView.ItemContainer>
    </ScrollView>
</LinearLayout>
